header a, header a:link, footer a, footer a:link
	color #fff
	cursor pointer

.social-link a, .social-link a:link, .blog-title
	color orange

header a:hover, footer a:hover
	color greenyellow

body
	padding-top 55px
	background url('/img/streak.png') CENTER

.content
	margin-bottom 33px
	margin-top 7px

.container .content
	margin 21px auto

.blog-title
	font-size 17px

.icon-logo
	width 24px

.github-fork
	position absolute
	top 51px
	right 0
	border 0

.sub-icon
	position: absolute;
	top 11px
	margin 0 0 0 -3px

.sup-icon
	margin 0 0 0 9px

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

.navbar .brand
	color #fff

.navbar .navbar-inner
	height 33px

.navbar-inner
	background #072b07
	background rgba(7,43,7,0.8)
	font bold 11px Helvetica,Arial,sans-serif

.hero-unit
	padding 44px 60px

.hero-unit, .sect, .post
	background-color #FAF6ED
	-webkit-border-radius 6px
	-moz-border-radius 6px
	border-radius 6px

.sect, .post
	padding 13px
	margin-bottom 13px

.sect
	width: 433px;

footer
	color #fff

.center-post
	margin auto
	display block

.amazon-link
	width 120px
	height 240px

.beta
	margin 22px 0 0 -13px
	float left
	color #ccc

.social-link
	opacity .7
	padding 7px

.social-link:hover
	opacity 1

.head-tweet
	font-weight normal

.mdm
	text-align right

::-moz-selection
	background rgba(7,43,7,0.8)
	color orange
	text-shadow none
::selection
	background rgba(7,43,7,0.8)
	color orange
	text-shadow none

::-webkit-scrollbar
	width 17px
	background rgba(7,43,7,0.8)
::-webkit-scrollbar-track
	-webkit-box-shadow:inset 0 0 6px rgba(0,0,0,0.2)
::-webkit-scrollbar-thumb
	background rgb(102,51,0)
	-webkit-box-shadow:inset 0 0 6px rgba(0,0,0,0.2)
::-webkit-scrollbar-thumb:window-inactive
	background rgb(216,210,206)